<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content"><%= micropost.content %></span>
  <% if micropost.picture? %>
    <%= link_to image_tag(micropost.picture.thumb.url), micropost.picture.url %>
  <% end %>
  
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user?(micropost.user) %>
      <%= link_to "delete", micropost, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
  </span>
  
  <div><a class= "toggleButton" href="#cmmt<%=micropost.id%>" data-toggle="collapse">
      <span class="glyphicon glyphicon-comment" aria-hidden="true"></span>
      <%=micropost.comments.size%>
    </a></div>
  
  <div id="cmmt<%=micropost.id%>" class="collapse">

    <%= form_for(@comment, remote: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
        <%= hidden_field_tag :micropost_id, micropost.id %>
        <%= f.text_area :content, class: 'form-control',placeholder: "Comment" %>
        <%= f.submit "Comment", class: "btn btn-primary btn-sm commentButton" %>
    <% end %>
    
    <div id="mp-<%= micropost.id%>-comments">
      <% if micropost.comments.any? %>
        <ol class="comment">
            <%= render micropost.comments %>
        </ol>
      <% end %>
    </div>
  </div>
</li>